<!DOCTYPE html>
<html lang="en">

    <head>
        <%- include('includes/head'); -%>
    </head>

    <body>
        <%- include('includes/header'); -%>

        <div class="inner">

            <main>

                <%- include('includes/monthfilter'); -%>

                <h1>Aftermovie Verknipt</h1>

                <noscript>
                    <style type="text/css">
                        .video-player { display:none; }
                        h1 { display: none;}
                    </style>
                </noscript>
                 
                <div class="video-player">
                    <video id="video">
                        <source src="/media/bloktechfilmpje.mp4" type="video/mp4">
                    </video>
                    <div class="controls">
                        <button id="play_pause">▶</button>
                        <button id="stop">⏸︎</button>
                    </div>
                </div>
                


                <h2><%= title %></h2>

                <% festivals.forEach(function(festival){ %>
                    <section>
                        <h2><%= festival.name %></h2>
                        <h3><%= festival.month %></h3>
                        <h4>Genres</h4>
                        <ul>
                            <% if (festival.genres) { %>
                            <% festival.genres.forEach(genre => { %>
                            <li ><%= genre %></li>
                            <% }) %>
                            <% } %>
                        </ul>
                        <h4>Locatie</h4>
                        <div class="locatie">
                            <p><%= festival.land %></p>
                            <p><%= festival.plaats %></p>
                        </div>
                    </section>
                    <% }) %>

            </main>

        </div>
        <%- include('includes/footer'); -%>
    </body>

</html>